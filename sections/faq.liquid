<div class="faq-page">
  <div class="faq-page-width">
    <div class="faq-page-header">
      <h1>{{ page.title }}</h1>

      <div class="faq-page-header-content">
        {{ page.content }}
      </div>

      <div class="faq-page-body">
        {% for block in section.blocks %}
          {% if block.type == 'category' %}
            <h2 class="faq-page-category">{{ block.settings.title }}</h2>
          {% else %}
            <div class="faq-page-question">
              <header class="faq-page-question-header">
                <h3>{{ block.settings.title }}</h3>
              </header>
              <div class="faq-page-question-body">
                {{ block.settings.body }}
              </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "FAQ",
  "settings": [],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [{ "type": "text", "id": "title", "label": "Category Title" }]
    },
    {
      "type": "questions",
      "name": "Questions",
      "settings": [
        { "type": "text", "id": "title", "label": "Questions Title" },
        { "type": "richtext", "id": "body", "label": "Questions Body" }
      ]
    }
  ]
}
{% endschema %}
